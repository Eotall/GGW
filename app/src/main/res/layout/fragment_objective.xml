<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/objective_image"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/drop_pin_button"
        android:layout_width="220dp"
        android:layout_height="76dp"
        android:layout_marginTop="150dp"
        android:text="Drop pin?"
        app:backgroundTint="#59AE6E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objective_image" />

    <TextView
        android:id="@+id/confirmationTextView"
        android:layout_width="237dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drop_pin_button" />

    <ImageView
        android:id="@+id/compass_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/directional_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objective_image" />

    <TextView
        android:id="@+id/currentloc"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:textSize="10sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objectiveloc" />

    <TextView
        android:id="@+id/objectiveloc"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objective_image" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        app:backgroundTint="@color/darkblue_GGW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_image_lightbulb"
        app:tint="@android:color/white"/>

    <Button
        android:id="@+id/compass_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="Compass"
        android:textSize="12sp"
        app:backgroundTint="@color/blue_GGW"
        app:layout_constraintStart_toEndOf="@+id/help_button"
        app:layout_constraintTop_toTopOf="@+id/help_button" />

    <Button
        android:id="@+id/panorama_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Panorama"
        android:textSize="12sp"
        app:backgroundTint="@color/blue_GGW"
        app:layout_constraintBottom_toBottomOf="@+id/help_button"
        app:layout_constraintStart_toEndOf="@+id/compass_button" />

    <Button
        android:id="@+id/distance_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="Distance"
        android:textSize="12sp"
        app:backgroundTint="@color/blue_GGW"
        app:layout_constraintBottom_toBottomOf="@+id/help_button"
        app:layout_constraintStart_toEndOf="@+id/panorama_button" />

    <Button
        android:id="@+id/hide_compass_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objective_image" />


</androidx.constraintlayout.widget.ConstraintLayout>