<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="50"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/objective_image"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/help_button_objective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        app:backgroundTint="#FC78B0B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_image_questionmark"
        app:tint="@android:color/white" />

    <Button
        android:id="@+id/drop_pin_button"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:text="Drop pin?"
        app:backgroundTint="#59AE6E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/confirmationTextView"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/compass_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/directional_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objective_image" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/hint_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        app:backgroundTint="#FC78B0B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_image_lightbulb"
        app:tint="@android:color/white" />

    <Button
        android:id="@+id/compass_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="Compass"
        android:textSize="12sp"
        app:backgroundTint="@color/blue_GGW"
        app:layout_constraintStart_toEndOf="@+id/hint_button"
        app:layout_constraintTop_toTopOf="@+id/hint_button" />

    <Button
        android:id="@+id/panorama_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Panorama"
        android:textSize="12sp"
        app:backgroundTint="@color/blue_GGW"
        app:layout_constraintBottom_toBottomOf="@+id/hint_button"
        app:layout_constraintStart_toEndOf="@+id/compass_button" />

    <Button
        android:id="@+id/distance_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="Distance"
        android:textSize="12sp"
        app:backgroundTint="@color/blue_GGW"
        app:layout_constraintBottom_toBottomOf="@+id/hint_button"
        app:layout_constraintStart_toEndOf="@+id/panorama_button" />

    <ImageButton
        android:id="@+id/help_image_objective"
        android:layout_width="305dp"
        android:layout_height="650dp"
        android:background="#E6FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/help_image_objective_" />


</androidx.constraintlayout.widget.ConstraintLayout>