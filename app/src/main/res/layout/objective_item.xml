<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- image viewer to view the images -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="68dp"
        android:layout_height="62dp"
        android:layout_centerVertical="false"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="653dp"
        android:text="Distance"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/confirmationTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewMain"
        android:layout_width="320dp"
        android:layout_height="236dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/TEMPORARYconfirmLocation"
        android:layout_width="220dp"
        android:layout_height="76dp"
        android:layout_marginTop="584dp"
        android:text="Framme!?"
        app:layout_constraintBottom_toTopOf="@+id/confirmationTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMain"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/confirmationTextView"
        android:layout_width="158dp"
        android:layout_height="174dp"
        android:layout_marginTop="540dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TEMPORARYconfirmLocation"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>