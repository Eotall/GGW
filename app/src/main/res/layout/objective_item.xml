<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_centerVertical="false"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_marginBottom="653dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:text="Distance"
        android:textStyle="bold"

        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageViewMain"
        android:layout_width="320dp"
        android:layout_height="236dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/TEMPORARYconfirmLocation"
        android:layout_width="220dp"
        android:layout_height="76dp"
        android:layout_marginTop="100dp"
        android:text="Framme!?"
        app:backgroundTint="#59AE6E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMain" />

    <Button
        android:text="Compass"
        android:id="@+id/compass_button"
        android:textSize="12sp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/TEMPORARYconfirmLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMain" />
    <ImageView
        android:id="@+id/compass_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/directional_arrow"
        app:layout_constraintBottom_toTopOf="@+id/TEMPORARYconfirmLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMain"
    />
    <TextView
        android:id="@+id/confirmationTextView"
        android:layout_width="156dp"
        android:layout_height="160dp"
        android:layout_marginTop="540dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TEMPORARYconfirmLocation"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentloc"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:textSize="10sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/TEMPORARYconfirmLocation"
        app:layout_constraintEnd_toStartOf="@id/compass_button"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/objectiveloc" />
    <TextView
        android:id="@+id/objectiveloc"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/currentloc"
        app:layout_constraintEnd_toStartOf="@id/compass_button"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMain" />



</androidx.constraintlayout.widget.ConstraintLayout>